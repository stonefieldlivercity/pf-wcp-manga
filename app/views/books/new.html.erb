<!--作品投稿部分-->
<h3 class="text-center p-3 mx-auto mt-n2 border"><%= t('.new_book') %></h3>
<%= render 'layouts/notification' %>
<div class="container-fuild mb-3">
  <div class="row">
    <%= form_with model: @book, method: :post, local: true do |f| %>
      <div class="row">
        <div class="col-md-5 text-nowrap px-5 py-3 mx-auto my-3 border">
          <h5 class="mb-4"><%= t('.data') %></h5>
          <div class="form-group">
            <%= f.label :title, class: "col-2 form-label" %>
            <%= f.text_field :title, class: 'form-control form-control-lg border' %>
          </div>
          <div class="form-group">
            <%= f.label Book.human_attribute_name(:name), class: "col-2 form-label" %>
            <%= f.text_field :name, class: 'form-control form-control-lg border' %>
          </div>
        </div>
<!--ジャンルの投稿のチェックボックス-->
        <div class="col-md-5 px-5 py-3 mx-auto my-3 border">
          <h5 class="mb-4"><%= t('defaults.genres') %></h5>
          <div class="form-check mx-3">
            <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |b| %>
              <%= b.label do %>
              <span class="btn btn-outline-primary">
                <%= b.text %>
                <%= b.check_box %>
              </span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
<!--評価の投稿部分-->
      <div class="row mb-3">
        <div class="col-md-10 p-5 mx-auto border">
          <h5 class="mb-4"><%= t('defaults.rating') %></h5>
          <%= render 'ratings/form', book: @book %>
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <%= f.submit t('defaults.create'), class: 'btn btn-outline-dark btn-block border' %>
      </div>
    <% end %>
  </div>
</div>




