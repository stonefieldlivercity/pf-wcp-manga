<div class="container">
  <h3>book#New</h3>
  <div class="row">
  <%= form_with model: @book, method: :post, local: true do |f| %>
    <div class="col-md-10 mx-auto">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= f.label :genre %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-md-10">
      <h6>評価</h6>
      <%= render 'ratings/form', book: @book %>

      <%= f.hidden_field :cool, :value => 'score' %>
      <%= f.hidden_field :cute, :value => 'score' %>
      <%= f.hidden_field :hot, :value => 'score' %>
      <%= f.hidden_field :relax, :value => 'score' %>
      <%= f.hidden_field :emotion, :value => 'score' %>
      <%= f.hidden_field :funny, :value => 'score' %>
      <%= f.hidden_field :complex, :value => 'score' %>
      <%= f.hidden_field :brisk, :value => 'score' %>
    </div>

    <div class="form-btn">
      <%= f.submit '投稿' %>
    </div>
  <% end %>
  </div>
</div>




