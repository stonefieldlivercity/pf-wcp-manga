<div class="container">
  <div class="row">
    <h3>search for "<%= @word %>"</h3>

    <table class="table">
      <thead>
        <tr>
          <th>title</th>
          <th>author</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.name %></td>
          <td><%= book.favorites.count %>いいね</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>