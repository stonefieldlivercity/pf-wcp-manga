<!--作品一覧のrender元部分-->
<table class="table">
  <thead class="border">
<!--作品一覧のラベル部分-->
    <tr class="text-center text-nowrap">
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:name) %></th>
      <th><%= t('defaults.genres') %></th>
      <th><%= t('defaults.favorites') %></th>
    </tr>
  </thead>
  <tbody class="text-center">
<!--作品一覧のボディ部分-->
  <% books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.name %></td>
      <td>
        <% book.genres.each do |b| %>
          <%= link_to b.name, genre_path(b), class: 'btn btn-sm btn-outline-primary m-1' %>
        <% end %>
      </td>
      <td class="<%= "favorite-" + book.id.to_s %> text-nowrap">
        <%= render "favorites/form", book: book %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


