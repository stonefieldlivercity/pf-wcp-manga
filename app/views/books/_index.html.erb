<div class="row">
  <table class="table">
    <thead>
      <tr><th>タイトル</th></tr>
    </thead>
    <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to book.title book_path(book.id) %></td>
        <td><%= book.name %></td>
        <td class=<%= "favorite-" + book.id.to_s %> >
          <%= render "favorites/form", book: book %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

