<h3 class="text-center p-3 mx-auto mt-n2 border">詳細情報</h3>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <th>title</th>
            <td><%= @book.title %></td>
          </tr>
          <tr>
            <th>author</th>
            <td><%= @book.name %></td>
          </tr>
          <tr>
            <th>genres</th>
            <td>
              <% @book.genres.each do |b| %>
                <%= b.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>favorites</th>
            <td class="favorite-<%= @book.id %>" >
              <%= render 'favorites/form', book: @book %>
            </td>
          </tr>
        </tbody>
      </table>

      <% if user_signed_in? && current_user.admin? %>
        <%= link_to book_path(@book), method: :delete, data: { confirm: "Are you sure ?" } do %>
          <span class="btn btn-block btn-outline-danger">delete</span>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-6 p-3">
      <%= render 'ratings/chart', rating: @rating %>
    </div>
  </div>
</div>

