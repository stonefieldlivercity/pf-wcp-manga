<h3 class="text-center p-3 mx-0 mt-n2 mb-0 border"><%= t('.new_title') %></h3>
<div id="tag-notice">
  <%= render 'layouts/notification' %>
</div>
<div class="container border">
  <div class="row m-2">
    <div class="col-md-5 p-4 mx-auto mb-2 border">
      <h5><%= t('.new_genre') %></h5>
      <%= form_with model: @genre, local: false do |f| %>
        <div class="form-group">
          <%= f.label Genre.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control tag-name' %>
        </div>
        <div class="form-group text-center">
          <%= f.submit t('defaults.create'), class: 'btn btn-outline-dark border' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 p-4 mx-auto mb-2 border">
      <h5><%= t('.delete_genre') %></h5>
      <div class="tag-index d-flex justify-content-around flex-wrap">
        <%= render 'genres/admin_index', genres: @genres %>
      </div>
    </div>
  </div>
</div>