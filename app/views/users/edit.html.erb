<h3 class="text-center p-3 mx-auto mt-n2 border"><%= t('.edit_user') %></h3>
<%= render 'layouts/notification' %>
<div class="container px-0">
  <div class="row">
    <div class="col-sm-10 col-lg-5 mx-auto my-3">
      <%= form_with model: @user, url: user_path(@user), class: 'px-5 py-3 border', method: :patch do |f| %>
        <div class="form-group">
          <%= f.label User.human_attribute_name(:name) %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label User.human_attribute_name(:email) %>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit t('defaults.update'), class: 'btn btn-outline-dark border' %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-10 col-lg-5 mx-auto mb-3 border">
      <h5 class="text-center my-3"><%= t('.cancel_my_account') %></h5>

      <p class="form-inline justify-content-around my-2">
        <label class="form-label">
          <%= t('.unhappy') %><br />
          <%= t('.confirm') %>
        </label>
        <%= link_to t('.cancel_my_account'), user_registration_path, data: { confirm: t('defaults.are_you_sure') },
        method: :delete, class: 'btn btn-outline-dark border' %>
      </p>
    </div>
  </div>
  <div class="row">
    <%= link_to t('.back'), mypage_path(@user), class: 'btn btn-lg btn-outline-dark border' %>
  </div>
</div>
