<div class="container">
  <h3>mypage</h3>
  <div class="row">
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td><label>ユーザー名</label></td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td><label>メールアドレス</label></td>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
