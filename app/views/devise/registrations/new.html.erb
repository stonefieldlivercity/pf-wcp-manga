<!--アカウント登録ページ-->
<h3 class="text-center border py-3 mx-0 mt-n2 mb-0"><%= t(".sign_up") %></h3>
<%= render "layouts/error_messages", resource: @user %>
<div class="container">
  <div class="row d-block">
　　<div class="col-sm-10 col-lg-8 mx-auto mb-4">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user px-5 py-3 border', local: true do |f| %>

        <div class="form-group mx-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control mx-auto' %>
        </div>

        <div class="form-group mx-3">
          <%= f.label User.human_attribute_name(:email) %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'form-control mx-auto' %>
        </div>

        <div class="form-group mx-3">
          <label><%= User.human_attribute_name(:password) %></label>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mx-auto' %>
        </div>

        <div class="form-group mx-3">
          <label><%= t('activerecord.attributes.user.password_confirmation') %></label><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mx-auto' %>
        </div>

        <div class="form-group text-center mt-2">
          <%= f.submit t('.sign_up'), class: 'btn btn-lg btn-outline-dark border mx-auto' %>
        </div>

        <div class="form-group text-center mb-0">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>



  </div>
</div>