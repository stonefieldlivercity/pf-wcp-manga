<div class="container-fuild mt-n2">
  <h3 class="py-3 m-0 text-center border"><%= t(".sign_up") %></h3>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
    <div class="row align-items-center mt-">
　　　<div class="col mx-4">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control w-75' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: 'form-control w-75' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control w-75' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control w-75' %>
        </div>

        <div class="form-group text-center">
          <%= f.submit t('.sign_up'), class: 'btn btn-lg btn-outline-dark border' %>
        </div>
      </div>
    </div>
    <% end %>
    <div class="row justify-content-end ml-5">
      <%= render "devise/shared/links" %>
    </div>
</div>