<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-contorol w-75' %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'form-control w-75' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control w-75' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-contorl w-75' %>
  </div>

  <div class="text-center">
    <%= f.submit "Sign up", class: 'btn btn-lg btn-outline-dark border' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
